@model MsdnWeb.Controllers.Rating[]
@{
    Layout = null;
}
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <script src="@Url.Content("~/Scripts/jquery-1.7.1.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui-1.8.17.js")" type="text/javascript"> </script>
    <link rel="stylesheet" href="@Url.Content("~/Content/themes/base/jquery-ui.css")" type="text/css"/>
    <meta content="text/html; charset=utf-8" http-equiv="Content-Type" />
    <title>Untitled 1</title>
</head>
<body>
    <script type="text/javascript">
        $(function () {
            $('input[name="title"]').autocomplete({
                source: "api/json/asynconeway/SearchQuery",
                minLength: 3,
                select: function (event, ui) {
                    event.target.value = ui.item.label;
                    event.target.nextSibling.value = ui.item.id;
                    return false;
                },
                change: function (event, ui) {
                    if (ui.item == null)
                        event.target.nextSibling.value = "0";
                    return true;
                }
            });
        });
    </script>
    <table cellspacing="0px">
        <tr>
            <td>
                <span class="pane">
                    <h3 class="header">
                        Rate your anime</h3>
                    <span id="title-list" class="nowrap">
                        @using (Html.BeginForm("FromList", "Recommend"))
                        {
                            @Html.TextBox("title")
                            @Html.Hidden("id", "-1")
                            @Html.DropDownList("rating", Model.Select(r => new SelectListItem() { Text = r.Name, Value = r.Value }))
                        }
                    </span></span>
            </td>
            <td>
                <h1>
                    OR</h1>
            </td>
            <td>
                <span>
                    <h3 class="header">
                        Use MyAnimeList.net</h3>
                    <span class="nowrap">Your login or profile
                        <input type="text" size="40" />
                    </span>
                    <div style="position: relative; margin-top: 5px">
                        Examples:</br>
                        <ul class="list">
                            <li>askanier</li>
                            <li>myanimelist.net/profile/askanier</li>
                            <li>http://myanimelist.net/profile/askanier</li>
                        </ul>
                        <button>
                            A button element</button>
                    </div>
                </span>
            </td>
        </tr>
    </table>
</body>
</html>
