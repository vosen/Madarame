@model MsdnWeb.Controllers.Rating[]
@{
    Layout = null;
}
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <script src="@Url.Content("~/Scripts/jquery-1.7.2.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.js")" type="text/javascript"></script>
    <!-- <script src="scripts/bootstrap.js" type="text/javascript"> </script> -->
    <link rel="stylesheet" href="@Url.Content("~/Content/bootstrap.css")" type="text/css"/>
    <link rel="stylesheet" href="@Url.Content("~/Content/bootstrap-responsive.css")" type="text/css"/>
    <link rel="stylesheet" href="@Url.Content("~/Content/main.css")" type="text/css"/>
    <link href='http://fonts.googleapis.com/css?family=Lato:700' rel='stylesheet' type='text/css'>
    <meta content="text/html; charset=utf-8" http-equiv="Content-Type" />
    <title>Untitled 1</title>
</head>
<body>
    <div style="margin-top:20px" class="container">
    <div class="row">
        <div class="span2">
            <h3>&nbsp;</h3>
            <h2>
            <small>
                Welcome to Instant Anime Rec. Choose ranking method.
            </small>
            </h2>
        </div>
        <div class="span10">
            <div class="row">
                <div class="span4">
                    <h3>Rate anime you have seen</h3>
                    <div class="well">
                    <form>
                        <input style="width:180px" type="text" class="input">
                    </form>
                    </div>
                </div>
                <div style="vertical-align:middle;" class="span2">
                <h3>&nbsp;</h3>
                    <h1>
                        OR
                    </h1>
                </div>
                <div class="span4">
                    <h3>Use MyAnimeList.net</h3>
                    <div class="well">
                        <form class="form-inline">
                            <label style="margin-right:5px" class="control-label" for="input01">Login</label>
                            <input style="width:180px" type="text" class="input">
                            <button type="submit" class="btn">Search</button></br>
                        </form>
                        <p>
                        Examples:
                        <ul>
                            <li>askanier</li>
                            <li>myanimelist.net/profile/askanier</li>
                            <li>http://myanimelist.net/profile/askanier</li>
                        </ul>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
</body>
</html>
