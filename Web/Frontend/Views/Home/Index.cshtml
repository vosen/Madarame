@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <script src="@Url.Content("~/Scripts/jquery-1.7.2.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/bootstrap-typeahead.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/main.js")" type="text/javascript"></script>
    <link rel="stylesheet" href="@Url.Content("~/Content/bootstrap.css")" type="text/css"/>
    <link rel="stylesheet" href="@Url.Content("~/Content/bootstrap-responsive.css")" type="text/css"/>
    <link rel="stylesheet" href="@Url.Content("~/Content/main.css")" type="text/css"/>
    <link href='http://fonts.googleapis.com/css?family=Lato:700' rel='stylesheet' type='text/css'>
    <meta content="text/html; charset=utf-8" http-equiv="Content-Type" />
    <title>Untitled 1</title>
</head>
<body>
    <div style="margin-top:20px" class="container">
    <div class="row">
        <div class="span2">
            <h3>&nbsp;</h3>
            <h2>
            <small>
                Welcome to <strong>Instant Anime Rec</strong>. Choose ranking method.
            </small>
            </h2>
        </div>
        <div class="span10">
            <div class="row">
                <div class="span4">
                    <h3>Rate anime you have seen</h3>
                    <div class="well ">
                    @using (Html.BeginForm("list", "recommend", FormMethod.Post)) {
                        <div>
                            <table border="0" cellpadding="0" id="title-list">
                            <tbody></tbody>
                            <tfoot>
                            <tr>
                                <td>
                                    <button class="btn btn-primary" type="submit"><i class="icon-white icon-search"></i> Recommend</button>
                                </td>
                                <td colspan="2">
                                    <button class="btn btn-success button-add">
                                        <span class="nowrap">
                                            <i class="icon-white icon-plus"></i> Add
                                        </span>
                                    </button>
                                </td>
                            </tr>
                            </tfoot>
                            </table>
                        </div>
                    }
                    </div>
                </div>
                <div style="vertical-align:middle;" class="span2">
                <h3>&nbsp;</h3>
                    <h1>
                        OR
                    </h1>
                </div>
                <div class="span4">
                    <h3>Use MyAnimeList.net</h3>
                    <div class="well">
                        <form class="form-inline">
                            <input style="width:180px" type="text" class="input input-large disabled" disabled="disabled" placeholder="Coming soon..."/>
                            <button type="submit" class="btn btn-primary disabled">Recommend</button>
                        </form>
                        <p>
                        Examples:
                        <ul>
                            <li>askanier</li>
                            <li>myanimelist.net/profile/askanier</li>
                            <li>http://myanimelist.net/profile/askanier</li>
                        </ul>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
</body>
</html>
